<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_dialog"
    >

    <TextView

        android:id="@+id/title_view"
        android:padding="10dp"
        android:text="Title"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#222222"/>

    <View

        android:layout_below="@id/title_view"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textColor="#444444"
        android:textSize="16sp"
        android:text="fasjdfklsdjfklajsdfklsdjfklasghawkjldghdslkjghsailgrhsdlkfhsdlkjghwieolgfjhasdklghesalkdf"
        android:padding="20dp"
        android:id="@+id/message_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <View

        android:layout_above="@id/cancel_view"
        android:background="#eaeaea"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:padding="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="취소"
            android:background="@drawable/background_dialog_button"
            android:layout_weight="1"
            android:id="@+id/cancel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/btn_divider"
            android:background="#eaeaea"
            android:layout_marginBottom="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <Button

            android:layout_weight="1"
            android:textColor="#222222"
            android:background="@drawable/background_dialog_button"
            android:id="@+id/confirm_view"
            android:text="확인"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>